<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_radian_clock"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.wavegate.tos.radianclock.RadianClockActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Traditional Time"
        android:id="@+id/traditional_time_lb"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textAlignment="center"/>

    <TextView
        android:text="Radian Time"
        android:layout_width="match_parent"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_height="wrap_content"
        android:id="@+id/radian_time_lb"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/animated_clock"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/traditional_time_lb"
        android:layout_above="@+id/radian_time_lb"/>

</RelativeLayout>
